<% provide(:title, 'All users') %>
<h1>All users</h1>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= link_to user.name, user %>
    </li>
  <% end %>
</ul>

<% @users.each do |user| %>
 <% if user.image %>
  <%= image_tag "/user_images/#{user.image}" %>
  <% else %>
  <%= image_tag "logo_cubic.png" %>
  <% end %>
 <% end %>
